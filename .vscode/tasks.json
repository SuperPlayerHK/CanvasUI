{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TypeScript File",
            "command": "tsc",
            "type": "shell",
            "args": [
                "${file}",
                "--strict",
                "--alwaysStrict",
                "--types",
                "--strictNullChecks",
                "--strictFunctionTypes",
                "--strictBindCallApply",
                "--strictFunctionTypes",
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always",
            },
            "group": "build"
        }
    ],
}